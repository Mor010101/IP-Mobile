<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_IP.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <BoxView HeightRequest="10"/>
            <Frame BackgroundColor="#efefee" HasShadow="False">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Entry x:Name="Email" Text="{Binding Email}" Placeholder="user@example.com"   
                           PlaceholderColor="#000000" Opacity="0.42" HeightRequest="40"   
                           Keyboard="Email"  
                           TextColor="#343333"/>
                    <Entry x:Name="Password" Text="{Binding Password}" Placeholder="********"   
                           PlaceholderColor="#000000" Opacity="0.42" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="#343333"/>
                    <Button Command="{Binding SubmitCommand}" Text="Login" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#9D0101" />
                </StackLayout>
                
            </Frame>
        </StackLayout>
  </ContentPage.Content>
</ContentPage>