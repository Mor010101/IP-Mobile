<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Mobile_IP.HomePage"
			 BackgroundColor="#cbcbcb">

	<StackLayout>
		<ImageButton Source="bell_icon.png"
					 HorizontalOptions="End"
					 Margin="8,15"/>

        <!--Main Frame-->
		<Frame CornerRadius="8"
			   HeightRequest="420"
			   WidthRequest="400"
			   Margin="90"
			   BackgroundColor="#efefee"
               BorderColor="Transparent">
			<Frame.Shadow>
                <Shadow Brush="#343333"
						Opacity="0.15"
						Offset="20,20"
						Radius="40"/>
			</Frame.Shadow>

			<StackLayout>
				<Label Text="Welcome, Laurentiu"
					   FontSize="20"
					   TextColor="#343333"/>

                <!--BPM Values Frame-->
                <Frame CornerRadius="8"
					   HeightRequest="175"
					   WidthRequest="275"
					   Margin="0,10,0,0"
					   BackgroundColor="#ffffff"
					   BorderColor="Transparent"
                       Padding="20,10">

                    <StackLayout>
                        <Label Text="Current Values"
							   FontSize="18"
                               TextColor="#343333"
                               Opacity="0.6"/>

                        <HorizontalStackLayout>
                            <Label Text="BPM"
                                   FontSize="24"
                                   TextColor="#9d0101"/>

                            <Label Text="67"
                                   FontSize="32"
                                   TextColor="#9d0101"/>

                            <Label Text="TEMP"
                                   FontSize="24"
                                   TextColor="#9d0101"/>

                            <Label Text="36Â°"
                                   FontSize="32"
                                   TextColor="#9d0101"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </Frame>

                <!--ECG Frame-->
                <Frame CornerRadius="8"
					   HeightRequest="133"
					   WidthRequest="275"
					   Margin="25"
					   BackgroundColor="#ffffff"
					   BorderColor="Transparent"
                       Padding="20,10">
                    
					<StackLayout>
						<Label Text="ECG"
							   FontSize="18"
                               TextColor="#343333"
                               Opacity="0.6"/>
						
						<Image Source="ecg.png"
                               HeightRequest="100"/>
					</StackLayout>
				</Frame>
			</StackLayout>
		</Frame>
	</StackLayout>
</ContentPage>